<!--Exponential PDF-->
<PDF>
  <parameters k="k"/>
  <function>
    <data x="x"/>
    <code>
      return exp(k * x);
    </code>
  </function>
  <integral>
    <bounds xmin="xmin" xmax="xmax"/>
    <code>
      if (k != 0)
         return 1. / k * (exp(k * xmax) - exp(k * xmin));
      else
         return xmax - xmin;
    </code>
  </integral>
</PDF>
