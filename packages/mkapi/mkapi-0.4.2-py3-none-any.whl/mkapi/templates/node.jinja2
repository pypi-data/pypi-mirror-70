{% if not node.headless %}
<div class="mkapi-node mkapi-node-depth-{{ node.depth }}" id="{{ node.id }}">
  <div class="mkapi-node-header mkapi-node-header-{{ node.kind }}">
    <div class="mkapi-node-kind mkapi-node-kind-{{ node.kind }}">{{ node.kind|upper }}</div>
    <div class="mkapi-node-name">
      {% if node.kind == 'module' or node.kind == 'package' %}{% if node.depth == 1 and node.prefix %}<span class="mkapi-node-prefix">{{ node.prefix }}.</span>{% endif %}<span class="mkapi-node-basename">{{ node.name }}</span>
      {% else %}
        {% if node.depth == 1 and node.prefix and node.kind not in ['method', 'readonly_property', 'readwrite_property'] %}<code class="mkapi-node-prefix">{{ node.prefix }}.</code>{% endif %}<code class="mkapi-node-basename">{{ node.name }}</code>{% if node.signature %}<code class="mkapi-node-signature">{{ node.signature }}</code>{% endif %}
        {% if node.type %}<span class="mkapi-args-type">&#x2192; {{ node.type }}</span>{% endif %}
      {% endif %}
    </div>
  </div>
  {{ docstring|safe }}
  {% if members %}
    <div class="mkapi-members">
      {% for member in members %}
        <div class="mkapi-member">
          {{ member|safe }}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>
{% else %}
<div class="mkapi-node mkapi-node-depth-{{ node.depth }}">
  {{ docstring|safe }}
</div>
{% endif %}
