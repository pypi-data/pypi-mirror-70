# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = tab
indent_style = tab
insert_final_newline = true
tab_width = 4

# YAML uses two-space indentation, carve out exception for .travis.yml
[.travis.yml]
indent_size = 2
indent_style = space
