<!-- Schema for numeric types -->
<xs:schema elementFormDefault="qualified" targetNamespace="http://xbrl.us/dtr/type/numeric-us"
  xmlns:link="http://www.xbrl.org/2003/linkbase"
  xmlns:num-us="http://xbrl.us/dtr/type/numeric-us"
  xmlns:xbrli="http://www.xbrl.org/2003/instance"
  xmlns:xlink="http://www.w3.org/1999/xlink"
  xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:import namespace="http://www.xbrl.org/2003/instance"
    schemaLocation="http://www.xbrl.org/2003/xbrl-instance-2003-12-31.xsd"/>

  <!-- The insolation item type is used to indicate that an element represents a measure of energy per area over a period of time and can be used to express the energy received by a surface per unit area over a given time period. The solar irradiance integrated over time is called solar irradiation, solar exposure or insolation. -->

  <complexType name="insolationItemType" xmlns="http://www.w3.org/2001/XMLSchema">
    <simpleContent>
      <restriction base="xbrli:decimalItemType"/>
    </simpleContent>
  </complexType>

  <!-- The temperature item type is used to perform a comparative measurement of hot or cold.-->

  <complexType name="temperatureItemType" xmlns="http://www.w3.org/2001/XMLSchema">
    <simpleContent>
      <restriction base="xbrli:decimalItemType"/>
    </simpleContent>
  </complexType>

  <!-- The pressure item type represents the force applied perpendicular to the surface of an object per unit area over which that force is distributed. Units include Pascal, PSI and Bar. -->

  <complexType name="pressureItemType" xmlns="http://www.w3.org/2001/XMLSchema">
    <simpleContent>
      <restriction base="xbrli:decimalItemType"/>
    </simpleContent>
  </complexType>

  <!-- The frequency item type represents the number of occurrences of a repeating event per unit time. -->

  <complexType name="frequencyItemType" xmlns="http://www.w3.org/2001/XMLSchema">
    <simpleContent>
      <restriction base="xbrli:decimalItemType"/>
    </simpleContent>
  </complexType>


  <!-- The irradiance item type is used to indicate that an element represents a measure of power per area and can be used to express the power received by a surface per unit area.-->

  <complexType name="irradianceItemType" xmlns="http://www.w3.org/2001/XMLSchema">
    <simpleContent>
      <restriction base="xbrli:decimalItemType"/>
    </simpleContent>
  </complexType>


 <!-- The speed item type is used to indicate  the distance travelled by the object divided by the duration of the interval to travel that distance. Units could include knots, mach, meters per second.-->
 <complexType name="speedItemType" xmlns="http://www.w3.org/2001/XMLSchema">
    <simpleContent>
      <restriction base="xbrli:decimalItemType"/>
    </simpleContent>
  </complexType>

 <!--  The plane angle item type is the ratio of the length of a circular arc to its radius. Units could include radians, degrees and gradians.-->
  <complexType name="planeAngleItemType" xmlns="http://www.w3.org/2001/XMLSchema">
    <simpleContent>
      <restriction base="xbrli:decimalItemType"/>
    </simpleContent>
  </complexType>

  <!--  The solid angle item type is the two-dimensional angle in three-dimensional space that an object subtends at a point. It is a measure of how large the object appears to an observer looking from that point. In the International System of Units (SI), a solid angle is expressed in a dimensionless unit called a steradian -->
   <complexType name="solidAngleItemType" xmlns="http://www.w3.org/2001/XMLSchema">
     <simpleContent>
       <restriction base="xbrli:decimalItemType"/>
     </simpleContent>
   </complexType>

  <!--  The voltage item type is  the difference in electric potential energy between two points per unit electric charge. -->
   <complexType name="voltageItemType" xmlns="http://www.w3.org/2001/XMLSchema">
     <simpleContent>
       <restriction base="xbrli:decimalItemType"/>
     </simpleContent>
   </complexType>

   <!--  The electric current item type is the flow of electric charge over a circuit. -->
    <complexType name="electricCurrentItemType" xmlns="http://www.w3.org/2001/XMLSchema">
      <simpleContent>
        <restriction base="xbrli:decimalItemType"/>
      </simpleContent>
    </complexType>

    <!--  The force item type describes any interaction that, when unopposed, will change the motion of an object. A force can cause an object with mass to change its velocity. Force can also be described intuitively as a push or a pull. A force has both magnitude and direction, making it a vector quantity. -->
     <complexType name="forceItemType" xmlns="http://www.w3.org/2001/XMLSchema">
       <simpleContent>
         <restriction base="xbrli:decimalItemType"/>
       </simpleContent>
     </complexType>

     <!--  The electric charge item type describes the physical property of matter that causes it to experience a force when placed in an electromagnetic field. -->
      <complexType name="electricChargeItemType" xmlns="http://www.w3.org/2001/XMLSchema">
        <simpleContent>
          <restriction base="xbrli:decimalItemType"/>
        </simpleContent>
      </complexType>

      <!-- The luminous intensity  item type is the wavelength-weighted power emitted by a light source in a particular direction per unit solid angle, based on the luminosity function, a standardized model of the sensitivity of the human eye. -->
      <complexType name="luminousIntensityItemType" xmlns="http://www.w3.org/2001/XMLSchema">
        <simpleContent>
          <restriction base="xbrli:decimalItemType"/>
        </simpleContent>
      </complexType>


</xs:schema>
