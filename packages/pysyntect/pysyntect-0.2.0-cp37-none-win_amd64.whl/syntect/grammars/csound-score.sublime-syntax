            - match: $
              pop: true
            - match: \d+
              captures:
                0: constant.numeric.integer.decimal.csound-score
              push:
                - match: $
                  pop: true
                - match: '[A-Z_a-z]\w*\b'
                  captures:
                    0: entity.name.function.preprocessor.csound-score
